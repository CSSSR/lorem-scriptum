{
  "repository": "git@github.com:CSSSR/loremscriptum.git",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "husky install",
    "dev": "cross-env NODE_ENV=development npm-run-all -l clean --parallel dev:*",
    "dev:webpack": "webpack --watch",
    "dev:eleventy": "eleventy --serve",
    "build": "cross-env NODE_ENV=production npm-run-all -l clean build:webpack build:eleventy",
    "build:eleventy": "eleventy",
    "build:webpack": "webpack",
    "lint:js": "eslint \"src/scripts/**/*.js\"",
    "lint:style": "stylelint \"src/styles/**/*.css\"",
    "fix:js": "yarn lint:js --fix",
    "fix:style": "yarn lint:style --fix",
    "format": "prettier --write **/*.{js,css} !dist",
    "optimize:webp": "npx @squoosh/cli --webp '{'quality':80}' src/assets/*.webp -d src/assets",
    "optimize:png": "npx @squoosh/cli --oxipng '{'level':2,'interlace':false}' src/assets/*.png -d src/assets",
    "optimize:jpg": "npx @squoosh/cli --mozjpeg '{'quality':80,'progressive':true}' src/assets/*.jpg -d src/assets",
    "optimize:svg": "svgo --precision=2 --multipass --recursive -i 'src/assets'",
    "optimize-img": "npm-run-all --parallel optimize:*"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.0",
    "@babel/cli": "7.13.16",
    "@babel/core": "7.13.8",
    "@babel/eslint-parser": "7.13.8",
    "@babel/preset-env": "7.16.11",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@squoosh/cli": "0.7.2",
    "autoprefixer": "10.4.4",
    "babel-loader": "8.2.4",
    "cross-env": "7.0.3",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "3.4.1",
    "dotenv-webpack": "7.1.0",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-loader": "4.0.2",
    "filemanager-webpack-plugin": "7.0.0-beta.0",
    "html-minifier": "4.0.0",
    "husky": "7.0.0",
    "lint-staged": "12.3.7",
    "mini-css-extract-plugin": "2.6.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "postcss-custom-media": "8.0.0",
    "postcss-import": "14.1.0",
    "postcss-loader": "6.2.1",
    "postcss-preset-env": "7.4.3",
    "postcss-sort-media-queries": "4.2.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "stylelint": "14.6.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended": "7.0.0",
    "stylelint-config-standard": "25.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-webpack-plugin": "3.2.0",
    "svgo": "2.8.0",
    "terser-webpack-plugin": "5.3.1",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2"
  }
}
